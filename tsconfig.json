{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "strict": true,
    "noEmit": true 
  },
  "include": [
    "src/**/*.ts",
    "src/migrations/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
